ALGORITHM counter
VAR
    X,Y,Z : INTEGER;
    "GO MY CODE" : STRING;
    nb_CHAR : INTEGER :=0;
    nb_word : INTEGER :=0;
    nb_vowels : INTEGER :=0;
BEGIN
    X:= 0;
    WHILE (X <= 8) DO
        X := X + 1;
        nb_CHAR := X + 1;
    END_WHILE
    Y := 0;
    WHILE (Y <= 3) DO
        Y := Y + 1;
        nb_word := Y + 1;
    END_WHILE
    Z := 0;
    WHILE (Z <= 4) DO
        Z := Z + 1;
        nb_vowels := Z + 1;
    END_WHILE
END